<UserControl x:Class="NIRSManagerClient.Views.AuthorsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
            <materialDesign:ColorZone Mode="PrimaryMid" Padding="16" Grid.Row="0">
            <DockPanel>
                <StackPanel Orientation="Horizontal"
                            materialDesign:RippleAssist.IsCentered="True">
                    <TextBlock
                            FontSize="28" 
                            MinHeight="50" 
                            TextAlignment="Center"
                            Background="Transparent"
                            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}">
                        Авторы                    
                    </TextBlock>
                    <materialDesign:ColorZone Mode="Standard" Padding="8 4 8 4" CornerRadius="2" Panel.ZIndex="1"
                                   Margin="100 5 0 0"
                                   materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Button Style="{DynamicResource MaterialDesignToolButton}" Command="{Binding CommandSearch}">
                                <materialDesign:PackIcon Kind="Magnify" Opacity=".56"/>
                            </Button>
                            <TextBox Grid.Column="1" Margin="8 0 0 0" materialDesign:HintAssist.Hint="Поиск" 
                                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0"
                                     MinWidth="200" VerticalAlignment="Center" Text="{Binding Search, Mode=TwoWay}"/>
                        </Grid>
                    </materialDesign:ColorZone>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Authors}" Grid.IsSharedSizeScope="True">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="Border" Padding="8" BorderThickness="0 0 0 1" BorderBrush="{DynamicResource MaterialDesignDivider}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="5*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Image Grid.Column="0" Grid.Row="0" 
                                       Grid.RowSpan="3"
                                       Height="180"
                                       Width="180"
                                       Source="{Binding PathPhoto}"
                                       >
                                </Image>
                                <TextBlock
                                    FontSize="18" 
                                    Grid.Column="1"
                                    Grid.Row="0"
                                     MinHeight="20" 
                                        TextAlignment="Left"
                                        Background="Transparent"
                                    Text="{Binding Fio}" />
                                <TextBlock
                                    FontSize="18" 
                                    Grid.Column="1"
                                    Grid.Row="1"
                                     MinHeight="20" 
                                        TextAlignment="Left"
                                        Background="Transparent"
                                    Text="{Binding Organization}" />
                                <TextBlock
                                    FontSize="18" 
                                    Grid.Column="1"
                                    Grid.Row="2"
                                     MinHeight="20" 
                                        TextAlignment="Left"
                                        Background="Transparent"
                                    Text="{Binding Position}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Button
                            Grid.Row="2"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            ToolTip="Добавить нового автора"
                            Command="{Binding CommandAdd}"
                            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                            Background="{DynamicResource PrimaryHueDarkBrush}"
                            FontSize="16"
                            Width="100"
                            MinHeight="50">
            Добавить
        </Button>
    </Grid>
</UserControl>


